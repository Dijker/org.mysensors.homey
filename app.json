{
    "id": "org.mysensors.homey",
    "sdk": 2,
    "version": "0.3.6",
    "compatibility": ">=2.0.0",
    "name": {
        "en": "Mysensors.org"
    },
    "description": {
        "en": "Mysensors.org app to Homey"
    },
    "category": ["climate","appliances", "lights"],
    "author": {
        "name": "Erik Wikner",
        "email": "erik.wikner@gmail.com"
    },
    "contributors": {
        "developers": [
            {
                "name": "Mark Swift",
                "email": "markaswift@gmail.com"
            },
            {
                "name" : "Terry Hendrix",
                "email": "terryhendrix90@gmail.com"
            },
            {
                "name" : "Marcel Timmermans",
                "email": "marcel@timmermans.us"
            }
        ]
    },
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "capabilities": {
        "mysensors_lastseen": {
            "type": "string",
            "title": {
                "en": "Last Seen"
            },
            "getable": true,
            "setable": true,
            "uiComponent": "sensor",
            "icon": "/assets/icons/mysensors_lastseen.svg"
        },
        "mysensors_custom": {
            "type": "string",
            "title": {
                "en": "Mysensor custom"
            },
            "getable": true,
            "setable": true,
            "insights": true,
            "uiComponent": "sensor",
            "icon": "/assets/icons/mysensors_custom.svg"
        },
        "mysensors_number": {
            "type": "number",
            "title": {
                "en": "Mysensor number"
            },
            "decimals": 2,
            "getable": true,
            "setable": true,
            "insights": true,
            "uiComponent": "sensor",
            "icon": "/assets/icons/mysensors_number.svg"
        },
        "mysensors_boolean": {
            "type": "boolean",
            "title": {
                "en": "Mysensor boolean"
            },
            "insightsTitleTrue": { "en": "On" },
            "insightsTitleFalse": { "en": "Off" },
            "getable": true,
            "setable": true,
            "insights": true,
            "uiComponent": "toggle",
            "icon": "/assets/icons/mysensors_boolean.svg"
        },
        "mysensors_boolean_get": {
            "type": "boolean",
            "title": {
                "en": "Mysensor boolean get"
            },
            "getable": true,
            "setable": false,
            "insights": true,
            "insightsTitleTrue": { "en": "On" },
            "insightsTitleFalse": { "en": "Off" },
            "uiComponent": "sensor",
            "icon": "/assets/icons/mysensors_boolean_get.svg"
        },
        "mysensors_boolean_set": {
            "type": "boolean",
            "uiComponent" : "button",
            "title": {
                "en": "Mysensor boolean set"
            },
            "getable": false,
            "setable": true,
            "insights": true,
            "insightsTitleTrue": { "en": "On" },
            "insightsTitleFalse": { "en": "Off" },
            "icon": "/assets/icons/mysensors_boolean_set.svg"
        },
        "mysensors_water_flow_hour": {
            "type": "number",
            "uiComponent": "sensor",
            "title": {
                "en": "Water flow per hour",
                "nl": "Watergebruik per uur"
            },
            "units": {
                "en": "L/h"
            },
            "desc": {
                "en": "Water flow in liters per hour",
                "nl": "Watergebruik in liters per uur"
            },
            "chartType": "stepLine",
            "decimals": 2,
            "getable": true,
            "setable": false,
            "insights": true,
            "icon": "/assets/icons/mysensors_water_flow.svg"
        },
        "mysensors_water_flow_min": {
            "type": "number",
            "uiComponent": "sensor",
            "title": {
                "en": "Water flow per minute",
                "nl": "Watergebruik per minuut"
            },
            "units": {
                "en": "L/min"
            },
            "desc": {
                "en": "Water flow in liters per minute",
                "nl": "Watergebruik in liters per minuut"
            },
            "chartType": "stepLine",
            "decimals": 2,
            "getable": true,
            "setable": false,
            "insights": true,
            "icon": "/assets/icons/mysensors_water_flow.svg"
        }
    },
    "drivers": [
        {
            "id": "mysensors",
            "name": {
                "en": "Mysensors Driver"
            },
            "images": {
                "large": "./drivers/mysensors/assets/images/large.png",
                "small": "./drivers/mysensors/assets/images/small.png"
            },
            "class": "socket",
            "capabilities": [],
            "pair": [
                {
                    "id": "initPair"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "value_changed",
                "title": {
                    "en": "Value has changed"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete",
                        "placeholder": {
							"en": "Trigger",
							"nl": "Trigger"
						}
                    }
                ]
            },
            {
                "id": "value_on",
                "title": {
                    "en": "Value is On"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete"
                    }
                ]
            },
            {
                "id": "value_off",
                "title": {
                    "en": "Value is Off"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete"
                    }
                ]
            },            {
                "id": "value_updated",
                "title": {
                    "en": "Value has updated"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete",
                        "placeholder": {
							"en": "Trigger",
							"nl": "Trigger"
						}
                    }
                ]
            }
        ],
        "conditions": [
            {
                "id": "value_is",
                "title": {
                    "en": "Value is..."
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete"
                    },
                    {
                        "name": "value_is",
                        "type": "text",
                        "placeholder": { 
                            "en": "Value IS "
                        }
                    }
                ]
            },
            {
                "id": "onoff",
                "title": {
                    "en": "On / Off"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete"
                    },
                    {
                        "name": "value_is",
                        "type": "dropdown",
                        "values": [
                            {
                                "id": "true",
                                "label": {
                                        "en": "On"
                                }
                            },
                            {
                                "id": "false",
                                "label": {
                                        "en": "Off"
                                }
                            }
                        ]
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "set_text",
                "title": {
                    "en": "Set text"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete"
                    }
                ]
            },
            {
                "id": "set_number",
                "title": {
                    "en": "Set number"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete"
                    },
                    {
                        "name": "value",
                        "type": "number",
                        "placeholder": [
                            {
                                "en": "Value"
                            }
                        ]
                    }
                ]
            },
            {
                "id": "set_onoff",
                "title": {
                    "en": "On / Off"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "sensorId",
                        "type": "autocomplete"
                    },
                    {
                        "name": "value_is",
                        "type": "dropdown",
                        "values": [
                            {
                                "id": "true",
                                "label": {
                                        "en": "On"
                                }
                            },
                            {
                                "id": "false",
                                "label": {
                                        "en": "Off"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}