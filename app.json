{
    "id": "org.mysensors.homey",
    "version": "0.0.1",
    "compatibility": "0.x || 1.x",
    "name": {
        "en": "Mysensors.org"
    },
    "description": {
        "en": "Mysensors.org app to Homey"
    },
    "author": {
        "name": "Erik Wikner",
        "email": "erik.wikner@gmail.com"
    },
    "images": {
        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
    },
    "drivers": [
        {
            "id": "mysensors",
            "name": {
                "en": "Mysensors Driver"
            },
            "images": {
                "large": "./drivers/mysensors/assets/images/large.jpg",
                "small": "./drivers/mysensors/assets/images/small.jpg"
            },
            "class": "sensor",
            "capabilities": [],
            "pair": [
                {
                    "id": "list_my_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "value_changed",
                "title": {
                    "en": "Value has changed"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors",
                        "placeholder": { 
                            "en": "Which sensor?"
                        }
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "set_value",
                "title": {
                    "en": "Set value"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors",
                        "placeholder": { "en": "Which sensor?"}
                    },
                    {
                        "name": "value",
                        "type": "text",
                        "placeholder": [
                            {
                                "en": "Value"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}